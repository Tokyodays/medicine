!!! 5
html(lang='ja')
  head
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1.0, user-scalable=yes')
    meta(http-equiv='X-UA-Compatible', content='IE=Edge')
    title お薬を登録 : お薬手帳
    link(rel='stylesheet', type='text/css', href='css/datepicker.css')
    link(rel='stylesheet', type='text/css', href='http://netdna.bootstrapcdn.com/bootstrap/3.1.1/css/bootstrap.min.css')
    link(rel='stylesheet', type='text/css', href='css/custom.css')
  body#regist
    nav.navbar.navbar-fixed-bottom
      .navbar-inner.clearfix
        ul.nav
          li
            a(href='index.html')
              span.glyphicon.glyphicon-calendar
              br
              | 今日のお薬
          li
            a(href='regist.html')
              span.glyphicon.glyphicon-pencil
              br
              | お薬を登録
          li
            a(href='list.html')
              span.glyphicon.glyphicon-list
              br
              | お薬一覧
          li
            a(href='profile.html')
              span.glyphicon.glyphicon-user
              br
              | プロフィール
    header
      h1 お薬手帳
      h2
        span.glyphicon.glyphicon-pencil
        | お薬を登録
    main.container
      form.form-horizontal(role='form')
        .form-group
          label.col-sm-3.control-label(for='nomikata') お薬の飲み方 :
          .col-sm-9
            select#nomikata.form-control.input-lg
              option(value='1') 食前
              option(value='2') 食直前
              option(value='3') 食直後
              option(value='4') 食後
              option(value='5') 食間
              option(value='6') 就寝前
        .form-group
          label.col-sm-3.control-label(for='name') お薬名称 :
          .col-sm-9
            input#name.form-control.input-lg(type='text', placeholder='なんとか錠', requied='requied')
        .form-group
          label.col-sm-3.control-label(for='mg') 量 :
          .col-sm-9
            input#mg.form-control.input-lg(type='text', placeholder='00mg', requied='requied')
        .form-group
          label.col-sm-3.control-label(for='number') 処方された個数 :
          .col-sm-9
            input#mg.form-control.input-lg(type='number', placeholder='1', min='1', requied='requied')
        hr
        .form-group
          label.col-sm-3.control-label(for='perDay') 一日の服用回数 :
          .col-sm-9
            input#perDay.form-control.input-lg(type='number', placeholder='3', min='1', requied='requied')
            .row.perTime
              .col-xs-4
                select.form-control.input-lg
                  option(value='1') 朝に
                  option(value='2') 昼に
                  option(value='3') 夕に
                  option(value='4') 就寝前に
              .col-xs-4
                input.form-control.input-lg(type='number', placeholder='1', value='1', min='1', requied='requied')
        .form-group
          label.col-sm-3.control-label(for='startDate') いつから服用するか :
          .col-sm-9
            .row
              .col-xs-4
                input#startDate.form-control.input-lg(type='number', placeholder='3', requied='requied')
              .col-xs-4
                select#startTiming.form-control.input-lg(requied='requied')
                  option(value='1') 朝
                  option(value='2') 昼
                  option(value='3') 夕
                  option(value='4') 就寝前
        hr
        .form-group
          label.col-sm-3.control-label(for='appendex') 備考 :
          .col-sm-9
            textarea#appendex.form-control.input-lg(rows='3')
        .form-group
          .col-sm-offset-3.col-sm-9
            button.btn.btn-lg.btn-primary(type='submit')
              i.glyphicon.glyphicon-pencil
              | 登録
  /if lte IE 8
  script(src='http://code.jquery.com/jquery-2.0.3.min.js')
  script(src='http://ajax.googleapis.com/ajax/libs/angularjs/1.2.12/angular.min.js')
  script(src='http://netdna.bootstrapcdn.com/bootstrap/3.1.1/js/bootstrap.min.js')
  script(src='js/min/script.min.js')
  script(src='https://apis.google.com/js/client.js?onload=initialize')
  script
  $(function(){
    $('#dp3').datepicker();
  })
  function regist(){
    var _nomikata = $("#nomikata").value();
    var _name = $("#name").value();
    var _mg = $("#mg").value();
    var _number = $("#number").value();
    var _perDay = $("#perDay").value();
    var _timing_array = [];
    $(".perTime").each(function(this){
      _timing_array.push({
        timing: $(this).find("select").value(),
        number: $(this).find("input").value()
      });
    })
    var _startDate = $("#startDate").value();
    var _startTiming = $("#startTiming").value();
    var _appendex = $("#appendex").value();
  }
